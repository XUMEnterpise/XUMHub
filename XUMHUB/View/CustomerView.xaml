<UserControl x:Class="XUMHUB.View.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XUMHUB.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">
    <Grid Margin="45 15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock  Text="Order Number:" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource Label}"/>
                <TextBlock x:Name="OrderNumberTextBox" Text="{Binding OrderNumber}"  Margin="15 0 0 0" Style="{StaticResource Label}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0" >
                <TextBlock Text="SKU" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource Label}"/>
                <TextBlock Text="{Binding SKU}" Margin="15 0 0 0" Style="{StaticResource Label}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
